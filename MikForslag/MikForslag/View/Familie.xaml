<Page
    x:Class="MikForslag.View.Familie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MikForslag.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
            <TextBlock FontSize="28" Margin="0,40,0,0" HorizontalAlignment="Center">Børn</TextBlock>
            <ListView Name="ListViewBørn"
                      BorderBrush="Black"
                      BorderThickness="0.5"
                      Height="350"
                      Width="250"></ListView>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="opretBarn">Opret</Button>
                <Button Name="SletBarn" Margin="50,0,0,0">Slet</Button>
            </StackPanel>
            <Button HorizontalAlignment="Center" Margin="0,20,0,0">Se vaccinationskort</Button>
        </StackPanel>
        
    </Grid>
</Page>
